{
  "name": "@aleph/indexer",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "postinstall": "npm run bootstrap && npm run build",
    "start": "npm i && ./run.sh",
    "start-alone": "./run.sh",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:cov": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:rebuild": "npm run clean:all && npm i && npm run test",
    "lint": "eslint --cache --ignore-path .gitignore './packages/**/src/**/*.{js,ts,tsx}'",
    "lint:fix": "npm run lint -- --fix --quiet",
    "build": "npm run clean:dist && npm run build:ts",
    "build:ts": "lerna exec -- tsc -p ./tsconfig.json",
    "watch:ts": "lerna exec --parallel -- tsc -w -p ./tsconfig.json",
    "bootstrap": "lerna bootstrap --force-local",
    "link": "lerna link --force-local && node ./scripts/links.js",
    "clean:dist": "find ./packages -maxdepth 2 -type d -name 'dist' -exec rm -rf '{}' +",
    "clean:package-lock": "find . -maxdepth 3 -type f -name package-lock.json -exec rm -rf '{}' +",
    "clean": "lerna clean --yes && npm run clean:dist && npm run clean:package-lock",
    "clean:all": "npm run clean && rm -rf ./node_modules",
    "deps:fix": "madge --exclude 'dist/(.+)' --circular packages"
  },
  "dependencies": {
    "@solana/spl-token-registry": "^0.2.7",
    "@solana/web3.js": "^1.42.0",
    "bn.js": "^5.2.0",
    "bs58": "^5.0.0",
    "buffer-layout": "^1.2.2",
    "cacheable-lookup": "^6.0.4",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-fetch": "^3.1.5",
    "dotenv": "^16.0.1",
    "dotenv-defaults": "^5.0.0",
    "express": "^4.18.1",
    "express-graphql": "^0.12.0",
    "express-rate-limit": "^5.5.1",
    "graphql": "^15.8.0",
    "graphql-tools": "^8.2.9",
    "graphql-type-json": "^0.3.2",
    "js-base64": "^3.7.2",
    "level": "^7.0.0",
    "lodash-es": "^4.17.21",
    "luxon": "^2.4.0",
    "murmurhash": "^2.0.0",
    "node-cache": "^5.1.2",
    "nodemon": "^2.0.16",
    "typedoc": "^0.23.14"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.0",
    "@types/bs58": "^4.0.1",
    "@types/cors": "^2.8.12",
    "@types/dotenv-defaults": "^2.0.1",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/jest": "^27.5.1",
    "@types/lodash-es": "^4.17.6",
    "@types/luxon": "^2.3.2",
    "@types/memdown": "^3.0.0",
    "@types/node": "^17.0.33",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "babel-eslint": "^10.1.0",
    "dotenv": "^16.0.1",
    "dotenv-defaults": "^5.0.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "get-port": "^6.1.2",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "lerna": "^5.5.1",
    "lint-staged": "^12.4.1",
    "madge": "^5.0.1",
    "memdown": "^6.1.1",
    "moleculer-repl": "^0.7.1",
    "prettier": "^2.6.2",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-jest-resolver": "^2.0.0",
    "typescript": "^4.6.4"
  },
  "overrides": {
    "uuid": "8.3.2"
  },
  "peerDependencies": {
    "luxon": "^2.4.0"
  },
  "engines": {
    "node": ">=16.15.0"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
